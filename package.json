{
  "name": "user-management-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx prisma migrate deploy && npx prisma db seed && node server.js",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "node prisma/seed.js",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate",
    "db:setup": "prisma migrate deploy && prisma db seed",
    "local": "npm run db:setup && npm run dev",
    "local:clean": "rm -rf .next && npm run db:setup && npm run dev",
    "deploy": "rm -rf .next && next build && node server.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "express": "^4.18.2",
    "next": "^14.0.4",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie": "^0.6.0",
    "tailwindcss": "^3.3.0",
    "prisma": "^5.3.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8",
    "eslint-config-next": "^14.0.4",
    "postcss": "^8.4.31",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
