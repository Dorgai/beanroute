# Database connection
DATABASE_URL="postgresql://postgres:password@localhost:5432/beanroute?schema=public"

# Authentication
JWT_SECRET="your-secret-key-here"
SESSION_SECRET="your-session-secret-here"

# Application
NODE_ENV="development"
PORT=3000

# Deployment options
SEED_DATABASE="false"

# For Railway's health check
HOSTNAME="0.0.0.0"

# Base URL for app (used in email links)
BASE_URL="http://localhost:3000"

# Email Configuration (Required for inventory alerts)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="BeanRoute <no-reply@beanroute.com>"

# Inventory Check API Key (for scheduled checks)
INVENTORY_CHECK_API_KEY="your-secure-api-key-here"

# Debug mode for inventory alerts (set to true for additional logging)
DEBUG_INVENTORY_ALERTS="true" 